  "item": [
    {
      "id": "f6cb7e13-f5a4-4244-8a60-c4db3a1fbc65",
      "name": "create-sink-connector",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"postgres-sink\",\n  \"config\": {\n    \"connector.class\": \"io.confluent.connect.jdbc.JdbcSinkConnector\",\n    \"tasks.max\": \"1\",\n    \"topics\": \"enriched_orders\",\n    \"connection.url\": \"jdbc:postgresql://host.docker.internal:5432/kafkadb\",\n    \"connection.user\": \"kafkauser\",\n    \"connection.password\": \"kafkapass\",\n    \n    \"value.converter\": \"org.apache.kafka.connect.json.JsonConverter\",\n    \"value.converter.schemas.enable\": \"true\",\n    \"key.converter\": \"org.apache.kafka.connect.storage.StringConverter\",\n    \n    \"auto.create\": \"true\",\n    \"insert.mode\": \"insert\",\n    \"delete.enabled\": \"true\",\n    \"table.name.format\": \"enriched_orders\",\n    \"pk.mode\": \"record_key\",\n    \"pk.fields\": \"order_id\"\n  }\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8083/connectors/",
          "host": [
            "localhost"
          ],
          "path": [
            "connectors"
          ],
          "protocol": "http"
        }
      },
      "response": [],
      "event": []
    },
    {
      "id": "9da17a2a-9964-48e5-89cf-c4b5fc7965cc",
      "name": "create-source-connector",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"http-source\",\n  \"config\": {\n    \"connector.class\": \"io.confluent.connect.http.HttpSourceConnector\",\n    \"topic.name.pattern\": \"orders\",\n    \"url\": \"http://host.docker.internal:3000/orders\",\n    \"max.retries\": \"1\",\n    \"http.offset.mode\": \"SIMPLE_INCREMENTING\",\n    \"http.initial.offset\": \"1\",\n    \"request.interval.ms\": \"86400000\",\n    \"key.converter\": \"org.apache.kafka.connect.json.JsonConverter\",\n    \"value.converter\": \"org.apache.kafka.connect.json.JsonConverter\",\n    \"key.converter.schemas.enable\": \"false\",\n    \"value.converter.schemas.enable\": \"false\",\n    \"confluent.topic.bootstrap.servers\": \"kafka:29092\",\n    \"confluent.topic.replication.factor\": \"1\",\n    \"confluent.topic.security.protocol\": \"PLAINTEXT\"\n  }\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8083/connectors/",
          "host": [
            "localhost"
          ],
          "path": [
            "connectors"
          ],
          "protocol": "http"
        }
      },
      "response": [],
      "event": []
